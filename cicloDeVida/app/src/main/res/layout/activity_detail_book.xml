<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4FEA71"
    tools:context=".DetailBook">
    <TextView
        android:id="@+id/Txvtitle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="40sp"
        android:text="El diario de Ana Frank"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imgFoto"/>
    <ImageView
        android:id="@+id/imgFoto"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:src="@drawable/auto"
        app:layout_constraintTop_toBottomOf="@id/Txvtitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/TxvAutor"
        />
    <TextView
        android:id="@+id/TxvAutor"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:text="Ana Frank"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/imgFoto"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/TxvPrecio"/>
    <TextView
        android:id="@+id/TxvPrecio"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="$100.00"
        app:layout_constraintTop_toBottomOf="@id/TxvAutor"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>